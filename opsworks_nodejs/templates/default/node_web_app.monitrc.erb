check host node_web_app_<%= @application_name %> with address 127.0.0.1
  start program = "/bin/sh -c 'cd <%= @deploy[:deploy_to] %>/current; /usr/bin/env PORT=<%= @deploy[:nodejs][:port] %> NODE_PATH=<%= @deploy[:deploy_to] %>/current/node_modules:<%= @deploy[:deploy_to] %>/current <%= @deploy[:deploy_to] %>/current/bin/hubot -a slack -n Hubot'"
  stop program  = "/usr/bin/pkill -f 'hubot'"
  if failed port <%= @deploy[:nodejs][:port] %> protocol HTTP
    request /
    with timeout 10 seconds
    then restart
